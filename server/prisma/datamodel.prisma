type User {
  id: ID! @id
  name: String
  job: String
  email: String! @unique
  password: String!
  user_avatar: File
  confirmed: Boolean @default(value: false)
  routines: [Routine!]!
  goals: [Goal!]!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

enum Days {
  Monday
  Tuesday
  Wednesday
  Thursday
  Friday
  Saturday
  Sunday
}

type Routine {
  id: ID! @id
  title: String!
  description: String!
  days: [Days!]! @scalarList(strategy: RELATION)
  failFee: Int!
  startDate: DateTime!
  endDate: DateTime!
  alertTime: String!
  highPriority: Boolean! @default(value: false)
  category: Category
  done: Boolean! @default(value: false)
  addedBy: User!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type Category {
  id: ID! @id
  name: String!
  addedBy: User!
  routines: [Routine!]!
  goals: [Goal!]!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

enum Status {
  Done
  Uncomplete
  Snoozed
}

type Goal {
  id: ID! @id
  title: String!
  description: String!
  goal_deadline: DateTime!
  fee: Int!
  snooze_fee: Int!
  highPriority: Boolean @default(value: false)
  status: Status @default(value: Uncomplete)
  category: Category
  addedBy: User!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type File {
  id: ID! @id
  filename: String!
  encoding: String!
  mimetype: String!
  url: String! @unique
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}
